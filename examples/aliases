# shellcheck disable=SC2148

alias comms="cat ~/.config/aliases | sed 's/alias//g'"
alias ecomms=" ~/.config/aliases"
alias srcall=". ~/.config/aliases"
# Utils alias
alias wztree="du -h / | sort -rh | head -n 30 | less"
alias wzhere="du -h . | sort -rh | head -n 30 | less"
alias genpw="head /dev/urandom | tr -dc A-Za-z0-9 | head -c 21; echo"
alias birth="stat /"
# Pac alias
alias updapc="pacman -Syu"
alias apkorph="pacman -Rns "
alias manypk="pacman -Q | wc -l"
alias apka="pacman -S"
alias apkd="pacman -R"
alias apks="pacman -Ss"
# Practical alias
alias sudo='sudo ' 
alias clr="clear"
alias cls="clr"
alias ls='ls --color=auto'
alias ll='ls --color=auto -la -h'
alias la='ls --color=auto -a'
alias l='ls --color=auto -CF'
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias logds='dmesg --color=auto'
# Save me alias
alias rm='rm -I'
alias rmrf='rm -rf -I'
